void task5_4_25()
{
	std::string num;
	bool alert = false;
	std::cin >> num;
	for (int i = 0; i < num.length(); i++)
	{
		if (num[i] <= 'f' && num[i] >= '5')
		{
			alert = true;
			printf("MALFUNCTION");
			break;
		}
	}
	if (alert != true)
	{
		printf("Script result: %d.", int5to2(num));
	}
}
